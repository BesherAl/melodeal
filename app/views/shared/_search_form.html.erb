<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 col-sm-4 form-devise">
      <%= simple_form_for(:filter, url: musicians_path, method: :get) do |f| %>
        <%= f.input :location, collection: Musician.pluck(:location).uniq %>
        <%= f.input :type_of_event, collection: Musician.pluck(:type_of_event).uniq %>
        <%# <%= f.input :date, label: "Date", prompt: "Select a date" %>
        <%= f.button :submit, "Find!", class: "btn btn-first w-100 mt-4" %>
      <% end %>
      <%= link_to "see all musicians", musicians_path, class: "btn btn-second-orange w-100" %>
    </div>
  </div>
</div>

