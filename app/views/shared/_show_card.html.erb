<div class="container">
  <div class="row justify-content-center d-grid mt-4">
    <div class="col-12">
      <div class="show-card">

  <div class="package-button">
    <% if @user.id == @musician.user_id %>
    <button type="button" class="btn btn-second-orange mb-4"><%= link_to "Create Package", new_musician_package_path(@musician) %>
    <% end %>
    </div>

        <div class="cover-photo">
          <%= image_tag(musician.photo, class: "profile") %>
        </div>
        <h3>
          <b><%= musician.first_name %> <%= musician.last_name  %></b>
        </h3>
        <div class="flex-container">
          <div>
            <p class="about"><%= @musician.type_of_musician %> <br> &#128205; <%= @musician.location %></p>
            <button class="btn btn-second-orange mb-4">Following</button>
          </div>
          <div class="flex-packages">
            <% musician.packages.each do |package| %>
              <div class="package-card">
                <small><%= package.description %></small>
                <hr>
                <p> <%= package.price.to_i %> â‚¬
                for <%= package.hours.to_i %> hours!</p>
                <button type="button" class="btn btn-first" data-bs-toggle="modal" data-bs-target="#exampleModal" data-action="click->booking#pushButton" data-booking-package-param="<%= package.id %>">
                  Book!
                </button>
              </div>
            <% end %>
            <div class="reviews_show">
              <% @musician.reviews.each do |review| %>
                <%= review.content %> 
                <%= review.rating %>
                <%# <%= review.rating.average(:rating) %>

              <% end %>
          </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
