<div class="container">
  <div class="row justify-content-center">
    <div class="col-12 form-devise">
    <h1>Add your musician!</h1>
      <%= simple_form_for [@musician] do |f| %>
        <%= f.input :first_name, label: "First name"%>
        <%= f.input :last_name, label: "Last name" %>
        <%= f.input :nickname, label: "Artist name" %>
        <%= f.input :location, label: "Location"%>
        <%= f.input :description, label: "Tell us about yourself"%>
        <%= f.input :type_of_event, label: "What kind of events do you like to play at?"%>
        <%= f.input :type_of_musician, label: "What insrument is your profession"%>
        <%= f.input :youtube_link, label: "youtube link"%>
        <%= f.input :instagram_link, label: "instagram link"%>
        <%= f.input :spotify_link, label: "spotify link"%>
        <%= f.input :soundcloud_link, label: "soundcloud link"%>
        <%= f.input :photo, as: :file, input_html: { class: 'd-none' }, label_html: { class: 'upload-photo'}, label: 'ðŸ“· Upload a photo' %>
        <%= f.submit "Add a profile picture", class: "btn btn-first" %>
      <% end %>
    </div>
  </div>
</div>
